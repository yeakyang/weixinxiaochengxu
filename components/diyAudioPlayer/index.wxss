/* components/diyAudioPlayer/index.wxss */
.my-audio {
  padding: 0 30rpx;
  margin: 60rpx 0;
}
.audio-box {
  width: 100%;
  display: flex;
}
.audio {
  width: 100%;
}
.audio__status {
  width: 80rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
}
.audio__content {
  flex: 1;
  position: relative;
}
.audio__progress,
.audio__progress-movable {
  position: relative;
  height: 100%;
  width: 100%;
  z-index: 5;
}
.audio__progress_current,
.audio__progress::before {
  content: "";
  position: absolute;
  height: 2px;
  border-radius: 10px;
  background-color: #666;
  top: 50%;
  left: 0;
  right: 0;
  transform: translateY(-50%);
}
.audio__progress_loading {
  opacity: 0;
}
.audio__progress_bar,
.audio__progress_tips {
  position: absolute;
  left: 0;
  height: 36rpx;
  width: 160rpx;
  color: #fff;
  font-size: 24rpx;
  line-height: 36rpx;
  border-radius: 100rpx;
  text-align: center;
}
.audio__progress_bar {
  position: absolute;
  top: 50%;
  margin-top: -18rpx;
  background-color: #333;
}
.audio__progress_tips {
  position: absolute;
  top: -60rpx;
  background-color: #2c8ef6;
  transform: scale(1.4);
  z-index: 6;
}
.audio__progress_current {
  width: 0;
  background-color: #2c8ef6;
  z-index: 99
}
